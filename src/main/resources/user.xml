<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="domain.entity.User" table="user">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment"/>
        </id>

        <property name="login" type="text">
            <column name="login" length="40" not-null="true" unique="true" />
        </property>

        <property name="passwordHash" type="text">
            <column name="passwordHash" length="150" not-null="true" unique="true" />
        </property>

        <property name="salt" type="text">
            <column name="salt" length="150" not-null="true" unique="true" />
        </property>

        <property name="token" type="text">
            <column name="token" length="150" not-null="true" unique="true" />
        </property>

        <property name="expiration" type="java.util.Date">
            <column name="expiration" length="40" not-null="true" unique="true" />
        </property>


    </class>
</hibernate-mapping>